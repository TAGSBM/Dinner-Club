<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="dinner_club_members">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group/group[1]/field[@name='website']" position="after">
                <field name="MaleFemale" />
                <field name="primary_office_id" placeholder="Primary Office"/>                
            </xpath>
            <xpath expr="/form/sheet/group/group[1]/field[@name='website']" position="replace">
            </xpath>
            <xpath expr="/form/sheet/group/group[2]/field[@name='fax']" position="replace">
            </xpath>
            <xpath expr="/form/sheet/group/group[2]/field[@name='phone']" position="replace">
                <field name="phone" string="Home Phone"/>
            </xpath>
            <xpath expr="/form/sheet/group/group[2]/field[@name='mobile']" position="replace">
                <field name="mobile" string="Mobile" placeholder="e.g. +61 0437 910 812"/>
            </xpath>
            <xpath expr="/form/sheet/group/group[2]/field[@name='phone']" position="after">
                <field name="PhoneWork" string="Work Phone"/>
            </xpath>
            
            <notebook position="inside">
            <page string="Attachments">
                <field name="attachments" widget="many2many_binary"/>
            </page>

            <page string="Dinner History">
                <field name="dinner_history"/>
            </page>
            <page string="Club Membership">
                <group>
                    <group>
                        <field name="FirstName"/>
                        <field name="LastName"/>
                        <field name="nick_name" />
                        <field name="Age" />
                        <field name="AgeRange1" />
                        <field name="AgeRange2" />
                        <field name="Account" />
                        <field name="Rating" string="Min Dinners"/>
                        <field name="LastDinnerDate" />
                        <field name="Smoker" />
                        <field name="Comments" />
                        <field name="Live" />
                        <field name="PersonalReferral" />
                        <field name="InterviewDate" />
                        <field name="Consultant" />
                        <field name="DedConsultant"/>
                        <field name="PrefCoach"/>
                        <field name="FurtherEducation" />
                        <field name="Employer" />
                        <field name="Industry" />
                        <field name="Position" />
                        <field name="JobDescription" />
                        <field name="Ambition" />
                        <field name="JoinReasons" />
                        <field name="PreferredAgeMin" />
                        <field name="PreferredAgeMax" />
                        <field name="heightgeneric"/>
                        <field name="weightgeneric"/>
                        <field name="Interests" />
                        <field name="Education" />
                        <field name="Description" />
                        <field name="days_ids" string="Preferred Days" widget="many2many_checkboxes"/>
                        <field name="RelationshipStatus"/>
                        <field name="PreferredCandidates" />                
                        <field name="PotentialCandidates" />
                        <field name="ConsultantNotes" />
                        <field name="DatesAvailable" />
                        <field name="DatesSelected" />
                        <field name="WorkInProgress" />                          
                    </group>
                    <group>
                        <field name="Build" />
                        <field name="Home" />
                        <field name="DinnerForTwoDinnersEntree" />
                        <field name="DinnerForTwoDinnersRegular" />
                        <field name="ClubDinnersRemaining" />
                        <field name="DOB" />
                        <field name="StarSign" />
                        <field name="MaritalStatus" />
                        <field name="MaritalsYrs" />
                        <field name="AloneSince" />
                        <field name="NoChildren" />
                        <field name="NoHome" />
                        <field name="OthersChildren" />
                        <field name="Nationality" />
                        <field name="Citizenship" />
                        <field name="MotherNationality" />
                        <field name="FatherNationality" />
                        <field name="YourYearsinOZ" />
                        <field name="Drink" />
                        <field name="Religion" />
                        <field name="ReligionImpt" />
                        <field name="HairColour" />
                        <field name="HairLength"/>
                        <field name="EyeColour" />
                       
                    </group>
                </group>
            </page>
            <page string="Gold/Platinum Membership">
                <group>
                <field name="GoldDinnersRemaining" />
                <field name="PlatinumDinnersRemaining" />
                </group>
                <group>
                    <group>
                        <field name="ParentsLocation" />
                        <field name="HaveSiblings" />
                        <field name="LevelofEducation" />
                        <field name="CandidateEducation" />
                        <field name="DescribeYourself" />
                        <field name="RelationshipHistory" />
                        <field name="PassionateAbout" />
                        <field name="PhysicalAttributes" />
                        <field name="PrecludeCandidates" />
                        <field name="CareerHistory" />
                    </group>
                    <group>
                        <field name="GrowUpCountry" />
                        <field name="SchoolPlace" />
                        <field name="CandidateChildren" />
                        <field name="CareerBackground" />
                        <field name="LineOfWork" />
                        <field name="MeasureSuccess" />
                        <field name="MajorInterests" />
                        <field name="HavePets" />
                        <field name="KindPersonality" />
                        <field name="StructureDinners" />
                        
                    </group>
                </group>
            </page>
            <page string="Dinner for Two">
                <group>
                    <group>
                        <field name="DinnerForTwoDinnersRemaining" />
                    </group>
                    <group>
                        <field name="CouchingMinutes" />
                    </group>
                </group>
            </page>
            <page string="Interests">
                <h1>Sports Interests</h1>
                <group>
                    <field name="interest_passive_string"/>
                    <field name="interest_active_string"/>
                </group>
                <group>
                    <group>
                        <field name="interest_sport_tennis" widget="radio"/>
                        <field name="interest_sport_water_skiing" widget="radio"/>
                        <field name="interest_sport_cricket" widget="radio"/>
                        <field name="interest_sport_gym" widget="radio"/>
                        <field name="interest_sport_running" widget="radio"/>
                        <field name="interest_sport_surfing" widget="radio"/>
                        <field name="interest_sport_aerobics" widget="radio"/>
                        <field name="interest_sport_cycling" widget="radio"/>
                        <field name="interest_sport_walking" widget="radio"/>
                        <field name="interest_sport_exercise_classes" widget="radio"/>
                        <field name="interest_sport_golf" widget="radio"/>
                        <field name="interest_sport_other" widget="radio"/>
                    </group>
                    <group>
                        <field name="interest_sport_squash" widget="radio"/>
                        <field name="interest_sport_football" widget="radio"/>
                        <field name="interest_sport_snow_skiing" widget="radio"/>
                        <field name="interest_sport_horse_riding" widget="radio"/>
                        <field name="interest_sport_bush_walking" widget="radio"/>
                        <field name="interest_sport_swimming" widget="radio"/>
                        <field name="interest_sport_boating" widget="radio"/>
                        <field name="interest_sport_fishing" widget="radio"/>
                        <field name="interest_sport_yoga" widget="radio"/>
                        <field name="interest_sport_camping" widget="radio"/>
                    </group>
                </group>
                <h1>Leisure Interests</h1>
                <group>
                    <group>
                        <field name="interest_sport_camping" widget="radio"/>
                        <field name="interest_leisure_literature" widget="radio"/>
                        <field name="interest_leisure_economics" widget="radio"/>
                        <field name="interest_leisure_politics" widget="radio"/>
                        <field name="interest_leisure_personal_development" widget="radio"/>
                        <field name="interest_leisure_astrology" widget="radio"/>
                        <field name="interest_leisure_other" widget="radio"/>
                    </group>
                    <group>
                        <field name="interest_leisure_history" widget="radio"/>
                        <field name="interest_leisure_current_affairs" widget="radio"/>
                        <field name="interest_leisure_philosophy" widget="radio"/>
                        <field name="interest_leisure_psychology" widget="radio"/>
                        <field name="interest_leisure_drama" widget="radio"/> 
                    </group>
                </group>
                <h1>Arts Interests</h1>
                <group>
                    <group>
                        <field name="interest_art_films" widget="radio"/>
                        <field name="interest_art_concerts" widget="radio"/>
                        <field name="interest_art_ballet" widget="radio"/>
                        <field name="interest_art_ballroom_dancing" widget="radio"/>
                        <field name="interest_art_latin_dancing" widget="radio"/>
                        <field name="interest_art_other" widget="radio"/>
                    </group>
                    <group>
                        <field name="interest_art_theatre" widget="radio"/>
                        <field name="interest_art_opera" widget="radio"/>
                        <field name="interest_art_modern_dance" widget="radio"/>
                        <field name="interest_art_art_galleries" widget="radio"/>
                        <field name="interest_art_american_dancing" widget="radio"/>
                    </group>
                </group>
                <h1>Music Interests</h1>
                <group>
                    <group>
                        <field name="interest_music_classical" widget="radio"/>
                        <field name="interest_music_opera" widget="radio"/>
                        <field name="interest_music_folk" widget="radio"/>
                        <field name="interest_music_jazz" widget="radio"/>
                        <field name="interest_music_country" widget="radio"/>
                        <field name="interest_music_other" widget="radio"/>
                    </group>
                    <group>
                        <field name="interest_music_light_classical" widget="radio"/>
                        <field name="interest_music_rb" widget="radio"/>
                        <field name="interest_music_rock" widget="radio"/>
                        <field name="interest_music_pop" widget="radio"/>
                    </group>
                </group>
                <h1>Activities/Hobbies</h1>
                <group>
                    <group>
                        <field name="interest_hobbies_travel" widget="radio"/>
                        <field name="interest_hobbies_gardening" widget="radio"/>
                        <field name="interest_hobbies_musical_instruments" widget="radio"/>    
                        <field name="interest_hobbies_other" widget="radio"/>
                    </group>
                    <group>
                        <field name="interest_hobbies_renovating" widget="radio"/>
                        <field name="interest_hobbies_cooking" widget="radio"/>
                    </group>
                </group>
                    </page>
                    
                    <page string="Blocked Members">
                        <field name="block_list" context="{'member_block_id': active_id}">
                            <tree string="Blocked Members" editable="bottom">
                                <field name="member_block_id"/>
	                        <field name="member_block_reason"/>
                            </tree>
                        </field>
	            </page>
                    
		    <page string="Blocked Restaurants">
		       <field name="restaurant_block_list" context="{'restaurant_block_id': active_id}">
		           <tree string="Blocked Restaurants" editable="bottom">
		               <field name="restaurant_block_id"/>
		    	       <field name="resaurant_block_reason"/>
		           </tree>
		       </field>
	            </page>
	            <page string="Member Holds">
		        <field name="member_hold" context="{'member_hold_id': active_id}">
		            <tree string="Member Hold" editable="bottom">
		                <field name="member_hold_start_time"/>
		  	        <field name="member_hold_end_time"/>
		  	        <field name="member_hold_reason"/>
		            </tree>
		        </field>
	            </page>
	            <page string="Contact Exchanges">
		        <field name="contact_exchange" context="{'member_exchange_id': active_id}">
		    	    <tree string="Contact Exchange" editable="bottom">
		    	        <field name="exchange_time"/>
		    	        <field name="member_exchange_by"/>
		    		<field name="member_exchange_with"/>
		    		<field name="exchange_comment"/>
		    	    </tree>
		        </field>
	            </page>
		    <page string="Member Children">
		        <field name="member_child_list" context="{'member_child_id': active_id}">
		            <tree string="Member Children" editable="bottom">
		    	        <field name="member_child_age"/>
		    		<field name="member_child_gender"/>
		    	    </tree>
		        </field>
	            </page>
                    <page string="Old Data">
                    <group>
                        <field name="Account"/>
                        <field name="Heightcm" />
                        <field name="Weightkg" />
                        <field name="Heightft" />
                        <field name="Weightst" />
                        <field name="MFYearsinOZ" string="MF Years in Country"/>
                        <field name="Politics" />
                        <field name="PreferredDinnerDays" />
                        <field name="Ages" />
	            </group>
	            </page>
	            <page string="Office List">
		        <field name="office_ids"/>
	            </page>
                </notebook>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_dinner_products">
	    <field name="name">Dinner Products</field>
	    <field name="res_model">product.template</field>
	    <field name="domain">[('type', '=', 'd')]</field>
	    <field name="context">{'default_type': 'd'}</field>
        </record>
        
        <menuitem name="Dinner Products"
                  parent="base.menu_marketing_config_association"
                  id="menu_dinner_products"
                  action="action_dinner_products"
                  sequence="2"/> 
        
    </data>
</openerp>